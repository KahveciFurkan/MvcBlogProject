@{
	Layout = null;
}
@model UserRegisterDto
<!DOCTYPE html>
<html>
<head>
	<title>Creative Colorlib SignUp Form</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
	<!-- Custom Theme files -->
	<link href="css/style.css" rel="stylesheet" type="text/css" media="all" />
	<link rel="stylesheet" href="~/css/Register.css" asp-append-version="true" />
	<!-- //Custom Theme files -->
	<!-- web font -->
	<link href="//fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,700,700i" rel="stylesheet">
	<!-- //web font -->
</head>
<body>
	<!-- main -->
	<div class="main-w3layouts wrapper">
		<h1>Kayıt Olma Formu</h1>
		<div class="main-agileinfo">
			<div class="agileits-top">
				<form asp-area="User" asp-controller="Register" asp-action="Index" method="post">
					<input asp-for="FirstName" class="text" type="text" name="Firstname" placeholder="İsim" required="">
					<input asp-for="LastName" class="text" type="text" name="Lastname" placeholder="Soyisim" required="">
					<input asp-for="UserName" class="text" type="text" name="UserName" placeholder="Kullanıcı İsmi" required="">
					<input asp-for="Email" class="text email" type="email" name="email" placeholder="Email" required="">
					<input asp-for="Password" class="text" type="password" name="password" placeholder="Şifre" required="">
					<input asp-for="ConfirmPassword" class="text w3lpass" type="password" name="password" placeholder="Şifre Tekrar" required="">
					<div class="wthree-text">
						<label class="anim">
							<input type="checkbox" class="checkbox" required="">
							<span>Üye olma koşullarını okudum.Kabul Ediyorum.</span>
						</label>
						<div class="clear"> </div>
					</div>
					<input type="submit" value="SIGNUP">
				</form>
				<p>Don't have an Account? <a href="#"> Login Now!</a></p>
			</div>
		</div>
		<!-- copyright -->
		<div class="colorlibcopy-agile">
			<p>© 2018 Colorlib Signup Form. All rights reserved | Design by <a href="https://colorlib.com/" target="_blank">Colorlib</a></p>
		</div>
		<!-- //copyright -->
		<ul class="colorlib-bubbles">
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
		</ul>
	</div>
	<!-- //main -->
</body>
</html>


