@model List<ArticleDto>
    
<div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">
            <span class="text-muted fw-light">Makale Yönetimi /</span> Makaleler
        </h4>
    <div class="card">
        <h5 class="card-header"></h5>
        <div class="table-responsive text-nowrap m-5">

            <a class="btn btn-success mb-3" asp-area="Admin" asp-controller="Article" asp-action="Add">
                Add  <i class="bx bx-plus"></i>
            </a>
            
            <table class="table table-bordered" id="articlesTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturulan Kişi</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturulan Kişi</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        <tr name="@item.Id">
                            <th>@item.ArticleName</th>
                            <th>@item.Category.Name</th>
                            <th>@item.CreatedDate.ToShortDateString()</th>
                            <th>@item.CreatedBy</th>
                            <th>@(item.IsDeleted ? "Aktif Değil" : "Aktif") </th>
                            <th></th>
                            
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>




</div>

@section Scripts {
    <script src="~/js/articleIndex.js" type="application/ecmascript"></script>
}
